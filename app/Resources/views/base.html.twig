<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('styles/main.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('styles/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div id="container">
    <div id="header">
        <p id="logo">Custom CMS</p>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

        <div id="nav">
            <ul class="nav navbar-nav">
            <a href="{{ path('custom_cms_homepage') }}" class="navbar-brand">Home</a>
          <li>  {% if is_granted('ROLE_ADMIN') %} </li>
                <li><a href="{{ path('cms_user') }}">Users</a> </li>
              <li>  <a href="{{ path('cms_category') }}">Categories</a> </li>
             <li> <a href="{{ path('cms_page') }}">Pages</a> </li>
                {% elseif is_granted('ROLE_USER') %}
                <li><a href="{{ path('cms_page') }}">Pages</a> </li>
                {% endif %}
            {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
              <li> <a href="{{ path('logout') }}">Logout</a></li>
            {% endif %}

            </ul>
        </div>
        </nav>
    </div>
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
</div>
</body>
</html>
